<%= simple_form_for(@availability) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :hospital_id %>
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.input :day_off %>
    <%= f.input :doctor_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
