<% if current_user.present? %>
    <li class="dropdown user-dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="glyphicon glyphicon-user"></i> <%= current_user.email %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li>
          <% if doctor? %>
              <%= link_to doctor_path(current_user) do %>
                  <i class="glyphicon glyphicon-user"></i> Profile
              <% end %>
          <% elsif patient? %>
              <%= link_to patient_path(current_user) do %>
                  <i class="glyphicon glyphicon-user"></i> Profile
              <% end %>
          <% elsif hospital_authority? %>
              <%= link_to hospital_authority_path(current_user) do %>
                  <i class="glyphicon glyphicon-user"></i> Profile
              <% end %>
              <%= link_to hospitals_hospital_authority_path(current_user) do %>
                  <i class="glyphicon glyphicon-th"></i> My Hospitals
              <% end %>
          <% end %>
        </li>
        <li>
          <%= link_to(destroy_user_session_path, :method => :delete) do %>
              <i class="glyphicon glyphicon-off"></i> Log Out
          <% end %>
        </li>
      </ul>
    </li>
<% else %>
    <li>
      <%= link_to user_session_path do %>
          <i class="glyphicon glyphicon-log-in"></i> Login
      <% end %>
    </li>
    <li>
      <%= link_to new_user_registration_path do %>
          <i class="glyphicon glyphicon-pencil"></i> Register
      <% end %>
    </li>
<% end %>