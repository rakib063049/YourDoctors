<div class="jumbotron row">
  <div class="row text-center">
    <%= render partial: 'shared/show_image', locals: {obj: @doctor} %>
    <br>
    <%= render partial: 'doctors/ratings', locals: {doctor: @doctor} %>
    <br>
    <%= rating_new_link(@doctor) %>
  </div>
  <div class="col-lg-6">
    <h2>
      <%= @doctor.name %>
      <%= doctor_edit_link(@doctor) %>
      <%= doctor_destroy_link(@doctor) %>
    </h2>
    <table class="table table-bordered">
      <tr>
        <th>Title</th>
        <td><%= @doctor.title %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= @doctor.name %></td>
      </tr>
      <tr>
        <th>Degrees</th>
        <td><%= @doctor.degrees %></td>
      </tr>
      <tr>
        <th>Education</th>
        <td><%= @doctor.education %></td>
      </tr>
      <tr>
        <th>Specialist</th>
        <td><%= @doctor.specialist %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= @doctor.email %></td>
      </tr>
      <tr>
        <th>Phone</th>
        <td><%= @doctor.phone %></td>
      </tr>
      <tr>
        <th>About Me</th>
        <td><%= @doctor.about_me %></td>
      </tr>
    </table>
  </div>

  <div class="col-lg-6">
    <h2> Rates <%= rate_new_link(@doctor) %> </h2>
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Title</th>
        <th>New Patients</th>
        <th>Old Patients</th>
      </tr>
      </thead>

      <% @doctor.rates.each do |rate| %>
          <tr>
            <td> <%= rate_show_link(@doctor, rate) %> </td>
            <td>BDT <%= rate.new_patient %></td>
            <td>BDT <%= rate.old_patient %></td>
          </tr>
      <% end %>
    </table>
    <br>

    <h2> Availabilities <%= availability_new_link(@doctor) %> </h2>
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Hospital</th>
        <th>Start</th>
        <th>End</th>
        <th>Off</th>
      </tr>
      </thead>

      <% @doctor.availabilities.each do |availability| %>
          <tr>
            <td><%= link_to availability.hospital.name, availability.hospital %> <%= availability_show_link(@doctor, availability) %></td>
            <td><%= availability.start_at %></td>
            <td><%= availability.end_at %></td>
            <td> <%= availability.day_off %></td>
          </tr>
      <% end %>
    </table>
  </div>
</div>

<h2 class="page-header">Reviews</h2>

<div class="row">
  <% @doctor.ratings.each do |rating| %>
      <div class="col-lg-12">
        <div class="col-lg-2 text-center">
          <%= render partial: 'shared/show_image', locals: {obj: rating.patient} %>
          <br>
          <%= link_to rating.patient.name, rating.patient %>
        </div>
        <div class="col-lg-10">
          <%= render partial: 'ratings/ratings', locals: {rating: rating} %>
          <br>
          <%= rating.comments %>
        </div>
      </div>
      <div class="col-xs-12">
        <hr>
      </div>
  <% end %>
</div>
