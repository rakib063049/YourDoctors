<div class="jumbotron">
  <h2>Doctor's Profile!</h2>

  <p>
    <strong>Name:</strong>
    <%= @doctor.name %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @doctor.title %>
  </p>

  <p>
    <strong>Degrees:</strong>
    <%= @doctor.degrees %>
  </p>

  <p>
    <strong>Education:</strong>
    <%= @doctor.education %>
  </p>

  <p>
    <strong>Specialist:</strong>
    <%= @doctor.specialist %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @doctor.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @doctor.phone %>
  </p>

  <p>
    <strong>About me:</strong>
    <%= @doctor.about_me %>
  </p>

</div>

<div class="row">
  <div class="col-lg-4">
    <%= link_to 'Edit Profile »', edit_doctor_path(@doctor), class: "btn btn-primary btn-lg btn-block" %>
  </div>
  <div class="col-lg-4">
    <%= link_to 'Add Rates »', new_doctor_rate_path(@doctor), class: "btn btn-primary btn-lg btn-block" %>
  </div>
  <div class="col-lg-4">
    <%= link_to 'Add Availability »', new_doctor_availability_path(@doctor), class: "btn btn-primary btn-lg btn-block" %>
  </div>
</div>
