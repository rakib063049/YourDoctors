<h1>Listing doctors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Degrees</th>
      <th>Education</th>
      <th>Specialist</th>
      <th>Age</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>City</th>
      <th>Thana</th>
      <th>District</th>
      <th>Country</th>
      <th>About me</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.title %></td>
        <td><%= doctor.degrees %></td>
        <td><%= doctor.education %></td>
        <td><%= doctor.specialist %></td>
        <td><%= doctor.age %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.phone %></td>
        <td><%= doctor.address %></td>
        <td><%= doctor.city %></td>
        <td><%= doctor.thana_id %></td>
        <td><%= doctor.district_id %></td>
        <td><%= doctor.cuntry %></td>
        <td><%= doctor.about_me %></td>
        <td><%= doctor.type %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

