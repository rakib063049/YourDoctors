<h1>Doctors</h1>
<div class="row">
  <% @doctors.each do |doctor| %>
      <div class="col-lg-12">
        <div class="col-lg-2">
          <img alt="User Pic" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100" class="img-circle">
        </div>
        <div class="col-lg-6">
          <div class="header">
            <p><%= link_to "#{doctor.title} #{doctor.name}", doctor_path(doctor), style: 'font-size: 23px;' %></p>
            <i style="font-size: 15px;"><%= doctor.degrees %></i>
            <p style="font-size: 17px; font-weight: 400"><%= doctor.specialist %></p>
            <p><%= doctor.about_me %></p>

            <span class="glyphicon glyphicon-phone"><%= doctor.phone %></span> |
            <span class="glyphicon glyphicon-envelope"><%= doctor.email %></span> |
            <span class="glyphicon glyphicon-map-marker"><%= doctor.city.try(:name) %></span>
          </div>
        </div>
        <div class="col-lg-4">
          <table class="table table-bordered">
            <thead>
            <tr>
              <th>Hospital</th>
              <th>Start</th>
              <th>End</th>
              <th>Off</th>
            </tr>
            </thead>

            <% doctor.availabilities.each do |availability| %>
                <tr>
                  <td><%= link_to availability.hospital.name, hospital_path(availability.hospital) %></td>
                  <td><%= availability.start_at %></td>
                  <td><%= availability.end_at %></td>
                  <td> <%= availability.day_off %></td>
                </tr>
            <% end %>
          </table>
        </div>
      </div>
      <div class="col-xs-12"><hr></div>
  <% end %>
</div>
