<div class="row text-center">
  <div class="col-md-6 col-md-offset-3" style="margin: 18%">
    <h3>Find a doctor's!</h3>
    <%= form_tag doctors_path, method: :get do %>
        <div class="input-group">
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search with Name, Location, Speciality" %>
          <span class="input-group-btn">
             <%= submit_tag "Search", class: "btn btn-default" %>
          </span>
        </div>
    <% end %>
  </div>
</div>
