<%= simple_form_for([@doctor, @rating], wrapper: :horizontal_form) do |f| %>
    <div class="form-inputs">
      <%= f.input :doctor_id, collection: [[@doctor.name, @doctor.id]], prompt: false %>
      <%= f.input :number, input_html: {class: 'rating'} %>
      <%= f.input :comments %>
      <%= f.hidden_field :patient_id, value: current_user.id %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>

