<div class="jumbotron row">
  <h2>
    <%= @hospital.name %>
    <% if resource_owner?(@hospital) %>
        <%= link_to edit_hospital_path(@hospital), class: "btn btn-primary" do %>
            <i class="glyphicon glyphicon-wrench"></i> Edit
        <% end %>
    <% end %>
  </h2>
  <table class="table table-bordered">
    <tr>
      <th>Name</th>
      <td><%= @hospital.name %></td>
    </tr>
    <tr>
      <th>Address</th>
      <td><%= @hospital.address %></td>
    </tr>
    <tr>
      <th>City</th>
      <td><%= @hospital.city.try(:name) %></td>
    </tr>
    <tr>
      <th>Country</th>
      <td><%= @hospital.cuntry %></td>
    </tr>
    <tr>
      <th>Phone</th>
      <td><%= @hospital.phone %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @hospital.email %></td>
    </tr>
  </table>
</div>
