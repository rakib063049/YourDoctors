<%= simple_form_for(@hospital, wrapper: :horizontal_form) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= render partial: 'shared/input_image', locals: {f: f} %>
      <%= f.input :name %>
      <%= f.input :phone %>
      <%= f.input :email %>
      <%= f.input :address %>
      <%= f.input :city_id, collection: City.all.collect { |c| [c.name, c.id] }, prompt: 'Please select City', required: true %>
      <%= f.input :cuntry, :input_html => {:value => f.object.cuntry || 'Bangladesh'}, label: "Country" %>
      <%= f.hidden_field :hospital_authority_id, value: current_user.id %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>


